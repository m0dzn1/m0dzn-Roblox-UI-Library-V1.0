-- LOAD THE LIBRARY
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/m0dzn1/m0dzn-ui-lib-test/refs/heads/main/m0dzn%20ui%20lib"))()

-- CREATE THE WINDOW
local Window = Library:CreateWindow({
    Title = "TEST HUB",
    Keybind = Enum.KeyCode.RightControl
})

-- SET CONFIG FOLDER
Window:SetFolder("TEST HUB") --Name of config folder

-- EXAMPLE TAB
local MainTab = Window:Tab("Main")

MainTab:Section("Welcome")

MainTab:Button("Test Button", function()
    print("Button Clicked!")
end)

MainTab:Toggle("Test Toggle", false, function(Value)
    print("Toggle is now:", Value)
end)

MainTab:Slider("WalkSpeed", 16, 100, 16, function(Value)
    if game.Players.LocalPlayer.Character then
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
    end
end)
